# =============================================================================
# RealtyAssistant AI Voice/Chat Agent - Environment Configuration
# =============================================================================

# Google Gemini API Key (Fallback LLM)
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Whisper Configuration (Local STT)
WHISPER_MODEL=base.en
# Options: tiny.en, base.en, small.en, medium.en, distil-large-v3

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Fallback Configuration
LLM_TIMEOUT_SECONDS=3.5
ENABLE_GEMINI_FALLBACK=false

# Data Persistence Paths
LOGS_DIR=data/logs
LEADS_DIR=data/leads

# Twilio Configuration (Optional - for voice calls)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# VAPI.ai Configuration (Optional - for voice AI)
VAPI_API_KEY=your_vapi_api_key
